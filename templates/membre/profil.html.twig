{% extends 'base.html.twig' %}

{% block title %}Membre{% endblock %}

{% block body %}
    <h1>Mon Profil</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ app.user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ app.user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ app.user.roles ? app.user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ app.user.password }}</td>
            </tr>
            <tr>
                <th>Pseudo</th>
                <td>{{ app.user.pseudo }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ app.user.nom }}</td>
            </tr>
            <tr>
                <th>Civilite</th>
                <td>{{ app.user.civilite }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ app.user.ville }}</td>
            </tr>
            <tr>
                <th>Code_postal</th>
                <td>{{ app.user.codePostal }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ app.user.adresse }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ app.user.Prenom }}</td>
            </tr>
        </tbody>
    </table>
            
            <div>
                <h2>Commandes <span>Nombre de Commande{{ app.user.commandes|length }}</span></h2>
                
                <table class ="table">
                    
                    <thead class="thead-pink">
                    <th>Date</th>
                    <th>Montant</th>
                    <th>Etat</th>
                    </thead>
                    {% for commande in app.user.commandes %}
                        <tr>
                            <td>{{ commande.dateEnregistrement  | date("d/m/Y")}}</td>
                            <td>{{ commande.montant }}  </td>
                            <td>{{ commande.etat }}</td>
                            <td><a href="{{ path('commande_detail', {'id': commande.id}) }}"></a></td>
                        </tr>
                    {% endfor %}
                </table>
            </div>

   

    <a href="{{ path('profil_modifier')}}">Modifier</a>

   
{% endblock %}

